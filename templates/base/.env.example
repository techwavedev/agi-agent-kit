# AGI Agent Kit - Environment Configuration
# Copy this file to .env and fill in your values

# --- Core Settings ---
# Project environment (development/production)
ENVIRONMENT=development
# Debug mode for verbose logging
DEBUG=false

# --- AI Model Providers ---
# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...
# OpenAI (GPT-4)
OPENAI_API_KEY=sk-...
# Google (Gemini)
GOOGLE_API_KEY=AIza...

# --- Memory & Database (Qdrant) ---
# Qdrant URL (default: localhost:6333 or cloud url)
QDRANT_URL=http://localhost:6333
# Qdrant API Key (required for cloud)
QDRANT_API_KEY=
# Collection name for agent memory
QDRANT_COLLECTION=agent_memory

# --- Knowledge Skills ---

# Webcrawler
# User agent string for polite crawling
USER_AGENT=AGI-Agent-Bot/1.0
# Maximum depth for recursive crawling (safety limit)
MAX_CRAWL_DEPTH=5

# GitHub/GitLab (for DevOps skills)
GITHUB_TOKEN=ghp_...
GITLAB_TOKEN=glpat-...

# Cloud Providers (for Infrastructure skills)
# AWS
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1

# Security Scanner
# OWASP ZAP API Key (optional)
ZAP_API_KEY=
# Snyk API Token (optional)
SNYK_TOKEN=

# Monitoring & Logging
# Sentry DSN
SENTRY_DSN=
# Datadog API Key
DD_API_KEY=
